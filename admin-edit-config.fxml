<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sparkysbookssystem.AdminEditConfig"
      spacing="20" alignment="CENTER" prefHeight="400.0" prefWidth="600.0">

    <Label text="Edit Configurations" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Good as New (%):" />
        <TextField fx:id="goodAsNewField" promptText="Enter percentage" />
        <Label text="Used (Good) (%):" />
        <TextField fx:id="usedGoodField" promptText="Enter percentage" />
        <Label text="Used (Poor) (%):" />
        <TextField fx:id="usedPoorField" promptText="Enter percentage" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSaveConfig" style="-fx-background-color: gold;" />
        <Button text="Cancel" onAction="#handleCancelConfig" style="-fx-background-color: gold;" />
    </HBox>

    <Button text="Back to Dashboard" onAction="#handleBackToDashboard" style="-fx-background-color: gold;" />
</VBox>
